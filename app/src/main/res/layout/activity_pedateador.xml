<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Pedateador">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pedateador"
            android:textSize="30dp"
            android:id="@+id/tvTitPedateador"
            android:layout_margin="15dp"
            android:textAlignment="center"
            android:gravity="center_horizontal"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:id="@+id/tvCodVigilante"
            android:layout_margin="15dp"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            />

        <RadioGroup
            android:id="@+id/radio_tipo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:textAlignment="center">

            <RadioButton
                android:id="@+id/radio_ingreso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center_horizontal"
                android:text="Ingreso"
                android:textAlignment="center" />

            <RadioButton
                android:id="@+id/radio_salida"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:gravity="center_horizontal"
                android:text="Salida"
                android:textAlignment="center" />

        </RadioGroup>



        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edtVigilante"
            android:inputType="number"
            android:hint="DNI"
            android:textSize="30dp" />

        <Button
            android:id="@+id/btnGuardarVigilante"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnVerificarVigilante"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Verificar"
            android:visibility="gone" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="@string/version_apk"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="25dp"
            android:gravity="center_horizontal" />


    </LinearLayout>

</RelativeLayout>